<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="loginUserDialogId"
        title="{i18n>loginDialogTitle}"
        escapeHandler=".handleLoginDialogEscape">
        <f:SimpleForm
            maxContainerCols="1"
            layout="ResponsiveGridLayout"
            labelSpanL="12"
            labelSpanM="12"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="1"
            columnsM="1">
            <f:content>
                <Label text="{i18n>loginSecondNameLabel}" required="true"/>
                <Input id="loginSecondNameFieldId" value="{configModel>/authData/secondName}"/>

                <Label text="{i18n>loginNameLabel}" required="true"/>
                <Input id="loginFirstNameFieldId" value="{configModel>/authData/name}"/>

                <Label text="{i18n>loginThirdNameLabel}" required="true"/>
                <Input id="loginThirdNameFieldId" value="{configModel>/authData/thirdName}"/>
            </f:content>
        </f:SimpleForm>
        <buttons>
            <Button text="{i18n>loginSingInButton}" press="onSignInPress"/>
            <Button text="{i18n>loginCancelButton}" press="onLoginCancelPress" type="Reject"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>