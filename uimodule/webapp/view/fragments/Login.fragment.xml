<core:FragmentDefinition
	xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog
		id="AddNewProduct"
		title="{i18n>loginDialogTitle}">
    <f:SimpleForm
			maxContainerCols="1"
			layout="ResponsiveGridLayout"
			labelSpanL="12"
			labelSpanM="12"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="1"
			columnsM="1">
			<f:content>
        <Label text="{i18n>loginNameField}" required="true"/>
        <Input/>

        <Label text="{i18n>loginSecondField}" required="true"/>
        <Input/>

        <Label text="{i18n>loginThirdField}" required="true"/>
        <Input/>
      </f:content>
    </f:SimpleForm>
    <buttons>
			<Button text="{i18n>loginSingInButton}" press="onSignInPress"/>
      <Button text="{i18n>loginCancelButton}" press="onCancelPress" type="Reject"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>