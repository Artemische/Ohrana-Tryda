<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="createUserDialogId"
        title="{i18n>createUserDialogTitle}">
        <f:SimpleForm
            maxContainerCols="1"
            layout="ResponsiveGridLayout"
            labelSpanL="12"
            labelSpanM="12"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="1"
            columnsM="1">
            <f:content>
                <Label text="{i18n>createSecondNameLabel}" required="true"/>
                <Input value="{configModel>/newUserData/secondName}"/>

                <Label text="{i18n>createNameLabel}" required="true"/>
                <Input value="{configModel>/newUserData/name}"/>

                <Label text="{i18n>createThirdNameLabel}" required="true"/>
                <Input value="{configModel>/newUserData/thirdName}"/>

                <Label text="{i18n>createLastDateLabel}"/>
                <DatePicker value="{configModel>/newUserData/lastAttestationDate}"/>

                <Label text="{i18n>createLastResultLabel}"/>
                <ComboBox items="{configModel>/newUserData/isAttestationPassedValues}">
                    <core:Item key="{configModel>id}" text="{= ${configModel>value} ? 'Сдано' : 'Не сдано'}" />
                </ComboBox>

                <Label text="{i18n>createMobileLabel}" required="true"/>
                <Input value="{configModel>/newUserData/mobilePhone}"/>

                <Label text="{i18n>createRoleLabel}" required="true"/>
                <RadioButtonGroup id="rbgRolesId" columns="2">
                    <RadioButton text="{i18n>rbUserRole}"/>
			        <RadioButton text="{i18n>rbAdminRole}"/>
                </RadioButtonGroup>
            </f:content>
        </f:SimpleForm>
        <buttons>
            <Button text="{i18n>createSubmitButton}" press="onSubmitPress" type="Accept"/>
            <Button text="{i18n>createCancelButton}" press="onCreateCancelPress" type="Reject"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>