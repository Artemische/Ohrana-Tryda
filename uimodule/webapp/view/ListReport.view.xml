<mvc:View controllerName="bntu.ohranaTryda.controller.ListReport" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vm="sap.ui.comp.variants">
    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" class="sapUiNoContentPadding">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <vm:VariantManagement standardItemText="{i18n>variantDefaultTxt}">
                    </vm:VariantManagement>
                </f:heading>
                <f:actions>
                    <ToolbarSpacer/>
                    <Button text="{i18n>loginButton}" type="Emphasized" press="openLoginDialog" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="true">
                        <fb:filterItems>
                            <fb:FilterItem name="A" label="{i18n>nameFltrLbl}">
                                <fb:control>
                                    <Input id="nameFltr" />
                                </fb:control>
                            </fb:FilterItem>
                            <fb:FilterItem name="B" label="{i18n>sNameFltrLbl}">
                                <fb:control>
                                    <Input id="secondNameFltr" />
                                </fb:control>
                            </fb:FilterItem>
                            <fb:FilterItem name="C" label="{i18n>departmentFltrLbl}">
                                <fb:control>
                                    <Select id="departmentFltr" change="onDepartmentFltrChange" forceSelection="false" items="{
                                            path: '/departments'
                                        }">
                                        <core:Item key="{key}" text="{name}"/>
                                    </Select>
                                </fb:control>
                            </fb:FilterItem>
                        </fb:filterItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <Table id="usersTableId" 
                inset="false" 
                items="{
                    path: '/AvailableUsers'
                }" 
                class="sapUiMediumMarginTop"
                noDataText="{i18n>noUsersText}" >
                <columns>
                    <Column minScreenWidth="Phone" demandPopin="true">
                        <Text text="{i18n>nameColumn}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>sNameColumn}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>departmentColumn}"/>
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="true">
                        <Text text="{i18n>atestationColumn}"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{name}"/>
                            <Text text="{secondName}"/>
                            <Text text="{department}"/>
                            <Text text="{lastAttestationResult}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Accept" text="Accept"/>
                <Button type="Reject" text="Reject"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>