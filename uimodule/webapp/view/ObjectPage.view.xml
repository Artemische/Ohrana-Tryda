<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:blockcolor="sap.uxap.sample.ObjectPageFormLayout.controller.blocks"
	xmlns:m="sap.m"
	controllerName="bntu.ohranaTryda.controller.ObjectPage"
	height="100%">
	<ObjectPageLayout id="pageOP"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true"
		editHeaderButtonPress="handleEditBtnPress"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<breadcrumbs>
					<m:Breadcrumbs id="breadcrumbsId" currentLocationText="Аттестация" >
						<m:Link text="Главная" press=".onListEmployeesBreadcrumbsPress"/>
					</m:Breadcrumbs>
				</breadcrumbs>

				<expandedHeading>
					<m:HBox>
						<m:Title text="{secondName}" wrapping="true"/>
					</m:HBox>
				</expandedHeading>

				<expandedContent>
					<m:Text text="{name} {thirdName}"/>
				</expandedContent>

				<actions>
					<m:Button text="Редактировать" type="Emphasized" press="toggleFooter"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap">
				<m:Avatar class="sapUiSmallMarginEnd" displaySize="L" />

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Кафедра:" design="Bold"/>
					<m:Label text="{department}"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Телефон:" design="Bold"/>
					<m:Label text="{mobilePhone}"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Результат аттестации:" design="Bold"/>
					<m:ObjectStatus 
						text="{= ${isAttestationPassed} ? 'Сдано': 'Не сдано'}" 
						state="{= ${isAttestationPassed} ? 'Success': 'Error'}"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd" visible="{isAttestationPassed}">
					<m:Label text="Дата сдачи:" design="Bold"/>
					<m:Label text="{lastAttestationDate}"/>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>

		<sections>
				<ObjectPageSection titleUppercase="false" id="Employment" title="Вопросы">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="1">
							<f:content>
								<m:Label text="как назваеься поошрама серьезность если она будешь?"/>
								<m:RadioButtonGroup id="rbg2" columns="1" class="sapUiMediumMarginBottom">
									<m:RadioButton id="RB2-1" text="Option 1" />
									<m:RadioButton id="RB2-2" text="Option 2" />
									<m:RadioButton id="RB2-3" text="Option 3" />
									<m:RadioButton id="RB2-31" text="Option 4" />
								</m:RadioButtonGroup>
								
								<m:Label text="как назваеься поошрама серьезность если она будешь?"/>
								<m:RadioButtonGroup id="rbg27" columns="1" class="sapUiMediumMarginBottom">
									<m:RadioButton id="R5345B2-1" text="Option 1" />
									<m:RadioButton id="RB2-5342" text="Option 2" />
									<m:RadioButton id="RB25345-3" text="Option 3" />
									<m:RadioButton id="RB27-31" text="Option 4" />
								</m:RadioButtonGroup>

								<m:Label text="как назваеься поошрама серьезность если она будешь?"/>
								<m:RadioButtonGroup id="rbewg2" columns="1" class="sapUiMediumMarginBottom">
									<m:RadioButton id="RB2fwe-1" text="Option 1" />
									<m:RadioButton id="RB2eq-2" text="Option 2" />
									<m:RadioButton id="RB2feq-3" text="Option 3" />
									<m:RadioButton id="RB2f-31" text="Option 4" />
								</m:RadioButtonGroup>

								<m:Label text="как назваеься поошрама серьезность если она будешь?"/>
								<m:RadioButtonGroup id="rb5g2" columns="1" class="sapUiMediumMarginBottom">
									<m:RadioButton id="RB2-13" text="Option 1" />
									<m:RadioButton id="RB2r-2" text="Option 2" />
									<m:RadioButton id="RB2s-3" text="Option 3" />
									<m:RadioButton id="RB2ww-31" text="Option 4" />
								</m:RadioButtonGroup>

								<m:Label text="как назваеься поошрама серьезность если она будешь?"/>
								<m:RadioButtonGroup id="r6bg2" columns="1" class="sapUiMediumMarginBottom">
									<m:RadioButton id="RB2-f1" text="Option 1" />
									<m:RadioButton id="RB2fs-2" text="Option 2" />
									<m:RadioButton id="RB2j-3" text="Option 3" />
									<m:RadioButton id="RnB2-31" text="Option 4" />
								</m:RadioButtonGroup>

								<m:Label text="как назваеься поошрама серьезность если она будешь?"/>
								<m:RadioButtonGroup id="rhqbg2" columns="1" class="sapUiMediumMarginBottom">
									<m:RadioButton id="RB2-1df" text="Option 1" />
									<m:RadioButton id="RBq2-2" text="Option 2" />
									<m:RadioButton id="RB2-wq3" text="Option 3" />
									<m:RadioButton id="RB2-w31" text="Option 4" />
								</m:RadioButtonGroup>
							</f:content>
						</f:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button type="Accept" text="Accept"/>
				<m:Button type="Reject" text="Reject"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>
